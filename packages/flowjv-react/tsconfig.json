{
	"compilerOptions": {
		"target": "es5",
		"jsx": "react",
		"module": "commonjs",
		"outDir": "./dist/",
		"declaration": true,
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "src/**/__tests__"]
}
